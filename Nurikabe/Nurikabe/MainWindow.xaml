<Window x:Class="Nurikabe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nurikabe"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="700">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid x:Name="board" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Margin="20">
        </Grid>

        <Button Name="import_btn" Grid.Column="1" Grid.Row="1" Content="Uvozi" Margin="0, 5, 10, 0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="import_btn_Click"/>
        <Button Name="solve_btn" Grid.Column="2" Grid.Row="1" Content="Reši" Margin="10, 5, 0, 0" HorizontalAlignment="Stretch" VerticalAlignment="Top"/>

    </Grid>
</Window>
